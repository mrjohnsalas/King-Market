@model IEnumerable<King_Market.Models.DocumentType>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Class Document", "Index", new { sortOrder = ViewBag.ClassDocumentSortParm })
        </th>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Only For Enterprise?", "Index", new { sortOrder = ViewBag.OnlyForEnterpriseSortParm })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClassDocumentType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OnlyForEnterprise)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DocumentTypeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DocumentTypeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DocumentTypeId })
        </td>
    </tr>
}

</table>
